 # server/.env

    # MongoDB
    MONGO_URI=your_mongodb_connection_string # Get from MongoDB Atlas

    # JWT
    JWT_SECRET=your_very_secret_jwt_string_here # Choose a strong, random secret
    JWT_EXPIRES_IN=1d # Token expiry time (e.g., 1 day)

    # Server Port
    PORT=5001 # Or any port you prefer (avoid 3000 if React uses it)

    # OpenAI API Key (Get from https://platform.openai.com/api-keys)
    OPENAI_API_KEY=sk-your_openai_api_key_here

    # Frontend URL (for CORS, update later when deployed)
    CLIENT_URL=http://localhost:5173 # Default Vite port

    # Cloudinary Credentials
    CLOUDINARY_CLOUD_NAME=your_cloud_name_here
    CLOUDINARY_API_KEY=your_cloudinary_api_key_here
    CLOUDINARY_API_SECRET=your_cloudinary_api_secret_here